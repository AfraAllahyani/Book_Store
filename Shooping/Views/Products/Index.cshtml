@{
    var items = (List<ProductModel>)ViewData["products"];
    var color = ViewData["color"];
    Layout = "_LayoutWeb";

}

<div class="container">
    <h2> Welcome to Book Store</h2>
    <h5>Find your favorite book</h5>
    <table class="table" style="background-color: @color">
        <thead>
            <tr class="table-info">
                <th scope="col">id</th>
                <th scope="col">Cover</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <th scope="row">@item.id</th>
                    <td><img style="width:200px;height:350px" src="@item.img" alt="@item.img" /></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td><a href="/Products/Details/@item.id"><button type="button" class="btn btn-danger">Show</button></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
